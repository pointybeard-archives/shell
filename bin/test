<?php
namespace Symphony\Shell\Command\Shell;

use Symphony\Shell\Lib;
use Symphony\Shell\Lib\Shell as Shell;

Class Test implements Lib\Interfaces\Command
{

    public function usage(){
        return 'This is the test command that ships with the shell extension.' . PHP_EOL;
    }

    public function run(){

        if(!Shell::instance()->isLoggedIn()){
            throw new \Exception('Valid authentication token must be supplied.');
        }

        Shell::message("Hi there. I am the 'test' command. Awesome I am. Here are the arguments you passed in: ", false, true);

        foreach(Shell::instance()->args as $key => $arg){
            Shell::message(sprintf("%d: '%s' => '%s'", $key, $arg->name(), $arg->value()), false, true);
        }

        print PHP_EOL;

    }
}
